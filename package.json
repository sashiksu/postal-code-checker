{
  "name": "postal-code-checker",
  "version": "1.0.3",
  "description": "A package for validating postal codes from various countries.",
  "author": "Sashika Suraweera",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "webpack serve --open --config webpack.config.js",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "lint": "eslint \"{**/*,*}.{js,ts}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts}\"",
    "test": "jest",
    "prepare": "npm run build",
    "watch": "nodemon --watch src --ext ts,tsx --exec \"npm run build\"",
    "publish:check": "npm run prettier && npm publish --dry-run",
    "publish": "npm publish"
  },
  "keywords": [
    "postal",
    "code",
    "checker",
    "validator",
    "zipcode",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashiksu/postal-code-checker.git"
  },
  "bugs": {
    "url": "https://github.com/sashiksu/postal-code-checker/issues"
  },
  "homepage": "https://github.com/sashiksu/postal-code-checker#readme",
  "devDependencies": {
    "@ant-design/icons": "^5.4.0",
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "antd": "^5.19.4",
    "babel-loader": "^9.1.3",
    "eslint": "^9.7.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
