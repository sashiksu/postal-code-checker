{
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "dev",
    "dev_dist",
    "webpack.config.js"
  ],
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  }
}